RewriteEngine On

# Allow access to specific files
RewriteRule ^components/admin_logout\.php$ - [L]

# Block access to specific directories
RewriteRule ^(assets|components|css) - [F,L]

# Allow access to public assets (CSS, JS, images)
<FilesMatch "\.(css|js|jpg|png|gif|svg|woff|woff2|ttf|otf)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Optionally, allow access to PHP files if needed
<FilesMatch "\.php$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Optionally, allow access to .htaccess itself if needed
<FilesMatch "^\.htaccess$">
    Order Allow,Deny
    Allow from all
</FilesMatch>
